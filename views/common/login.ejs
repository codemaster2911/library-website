<!doctype html>
<html>

<head>
    <meta charset="utf-8">

    <title>Sign In</title>
    <link rel="stylesheet" href="../css/login-register-style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <style>

        .breadcrumb a{
            position: relative;
            top: 100px;
            left: 50px;
            text-decoration: none;
            background-color: rgb(238, 223, 196);
            color: black;
            margin: 10px;
            padding: 10px 15px; 
            border-radius: 5px;
        }

        .breadcrumb a:hover{
            padding: 11px 16px;
            background-color: rgb(235, 202, 142);
        }

    </style>

</head>

<body>
    
    <div class="breadcrumb" style="display: inline;">
        <a href="<%=path%>"> Home </a>
    </div>

    <div class="box">
        <h2>Login</h2>
        <form method="POST">
            <div class="inputBox">
                <input type="text" name="email" required="true">
                <label>E-Mail ID</label>
            </div>
            <div class="inputBox">
                <input type="password" name="password" required="true">
                <label>Password</label>
            </div>
            <div class="inputBox">
                <text>New User</text>
                <a href="<%=path%>auth/signup" class="signup">Sign Up here</a>
            </div>
            <center style="margin-top: 10px;">
                <signin>
                    <button type="submit" class="btn btn-success">Sign In</button>
                </signin>
            </center>
            <%if(typeof error[0] != 'undefined'){%>
                <div style="margin-top: 5px;" class="alert alert-danger" role="alert">
                    <%=error%>
                </div>
            <%}%>
            <%if(typeof message[0] != 'undefined'){%>
                <div style="margin-top: 5px;" class="alert alert-success" role="alert">
                    <%=message%>
                </div>
            <%}%>
            <center>
                <a href="<%=path%>auth/google"><img style="margin-top: 10px;" src="../images/google.png" /></a>
            </center>
        </form>
    </div>
</body>

</html>